    <script>
        // Lấy đường dẫn URL hiện tại
        var currentUrl = window.location.href;

        // Lặp qua các mục và kiểm tra đường dẫn URL
        var menuItems = document.querySelectorAll("#menuactive li");
        var isMouseOver = false; // Biến theo dõi trạng thái rê chuột

        menuItems.forEach(function (item) {
            var link = item.querySelector("a").href;

            // So sánh đường dẫn URL hiện tại với đường dẫn của mục
            if (currentUrl === link) {
                item.classList.add("active");
            } else {
                item.classList.remove("active");
            }

            // Thêm sự kiện mouseenter cho từng mục
            item.addEventListener("mouseenter", function () {
                // Đánh dấu rằng có rê chuột vào một mục
                isMouseOver = true;

               

                // Thêm lớp "active" vào mục được rê chuột
                this.classList.add("active");
            });

            // Thêm sự kiện mouseleave cho từng mục
            item.addEventListener("mouseleave", function () {
                // Đánh dấu rằng không có rê chuột vào bất kỳ mục nào
                isMouseOver = false;

                // Kiểm tra nếu không có rê chuột vào bất kỳ mục nào
                if (!isMouseOver) {
                    // Xóa lớp "active" khỏi mục có đường dẫn đúng
                    if (currentUrl !== link) {
                        this.classList.remove("active");
                    }
                }
            });
        });
    </script>
