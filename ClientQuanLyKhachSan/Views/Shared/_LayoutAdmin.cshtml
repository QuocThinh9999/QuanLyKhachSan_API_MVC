    <script>
        function reloadPartialView() {
            $.ajax({
                url: "http://localhost:5006/api/TuVan/thong-bao-tu-van",
                type: "GET",
                success: function (result) {
                    
                    if (result !== 0) {
                        $("#thongBaoContainer").html(`
                            <div class="circle"
                                 style="width: 25px;height: 20px;border-radius: 50%;background: red;position: absolute;top: 5px;right: 5px;box-shadow:0 0 10px #dfa974;display: flex;align-items: center;justify-content: center;">
                                <span style="font-size: 13px; color: #ffff;">${result}</span>
                            </div>
                        `);
                    } else {
                        $("#thongBaoContainer").empty();
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }

        $(document).ready(function () {
            reloadPartialView();
            setInterval(function () {
                reloadPartialView();
            }, 500);
        });
        function reloadPartialViewHoaDon() {
            $.ajax({
                url: "http://localhost:5006/api/HoaDon/thong-bao-hoa-don",
                type: "GET",
                success: function (result2) {

                    if (result2 !== 0) {
                        $("#thongBaoContainerHoaDon").html(`
                                    <div class="circle"
                                         style="width: 25px;height: 20px;border-radius: 50%;background: red;position: absolute;top: 5px;right: 5px;box-shadow:0 0 10px #dfa974;display: flex;align-items: center;justify-content: center;">
                                        <span style="font-size: 13px; color: #ffff;">${result2}</span>
                                    </div>
                        `);
                    } else {
                        $("#thongBaoContainerHoaDon").empty();
                    }
                },
                error: function (xhr, status, error) {
                    console.log(error);
                }
            });
        }
        $(document).ready(function () {
            reloadPartialViewHoaDon();
            setInterval(function () {
                reloadPartialViewHoaDon();
            }, 500);
        });

    </script>

    @await RenderSectionAsync("Scripts", required: false)
