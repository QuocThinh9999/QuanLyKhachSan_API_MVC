@model ClientQuanLyKhachSan.Models.ModelViewUser
@{
    ViewData["Title"] = "Lien Lac";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" href="~/front-end/css/contact.css">
<div class="contact-infor">
    <div class="container">
        <div class="row">
            <div class="col-lg-4">
                <div class="address">
                    <h2>Thông tin liên lạc</h2>
                    <p>
                        Chào mừng quý khách đến với khách sạn chúng tôi! Hãy để chúng tôi là điểm đến lý tưởng cho
                        kỳ
                        nghỉ của bạn!
                    </p>
                    <table>
                        <tbody>
                            <tr>
                                <td>
                                    Địa chỉ:
                                </td>
                                <td>
                                    @Model.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Địa Chỉ").MoTa
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    Số điện thoại:
                                </td>
                                <td>@Model.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="SĐT").MoTa</td>
                            </tr>
                            <tr>
                                <td>
                                    Email:
                                </td>
                                <td>@Model.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Email").MoTa</td>
                            </tr>
                        </tbody>
                    </table>
                </div>

            </div>
            <div class="col-lg-7 offset-lg-1">
                <form asp-controller="LienLac" asp-action="LienLac" method="post" enctype="multipart/form-data">

                    <div class="form-group">
                        <div class="row">
                            <div class="col-lg-6">
                                <input type="text" placeholder="Tên" style="width: 100%;" name="Ten">
                            </div>
                            <div class="col-lg-6">
                               
                                    <input type="text" style="width: 100%;" placeholder="email" value="@Model.email" name="Email">
                               
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-12">
                                <textarea id="" style="width: 100%;" placeholder="Lời nhắn của bạn" name="LoiNhan"></textarea>
                            </div>
                        </div>
                        <button type="submit">Gửi ngay</button>
                    </div>
                    <div class="modal" id="myModal-capnhat" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Gửi tư vấn thành công</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>

                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>

                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>

<div class="map">
    <div class="container">
        <div class="row">
            <div class="col-lg-12" style="margin-bottom: 50px;">
                <iframe src="@Model.ThongTinWebs.FirstOrDefault(c=>c.LoaiThongTin=="Link Địa Chỉ").MoTa" width="100%" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
    </div>
</div>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (@Model.TrangThaiTuVan === 1) {
            $('#myModal-capnhat').modal('show');
        }
    });
</script>