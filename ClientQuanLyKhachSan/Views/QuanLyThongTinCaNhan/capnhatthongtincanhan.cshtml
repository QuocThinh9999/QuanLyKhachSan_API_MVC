@model ClientQuanLyKhachSan.Models.ModelViewUser
@{
    ViewData["Title"] = "Cap Nhat Thong Tin Ca Nhan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<div class="personal_info">
    <div class="container">
        <div class="row" style="margin-bottom:50px ;">
            <div class="col-lg-8 offset-lg-2">
                <div class="header-left">
                    <h2 style="margin-bottom: 20px; margin-top: 50px;font-weight: 700;">Thông tin cá nhân</h2>
                    <span>Cập nhật thông tin của bạn !</span>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-8 offset-lg-2">
                <form asp-area="" asp-controller="QuanLyThongTinCaNhan" asp-action="CapNhatThongTinCaNhan" method="post" enctype="multipart/form-data">
                    <table class="table" style="align-items: center;">
                        <tbody>
                            <tr style="border-top: 1px solid  #e5e5e5;">
                            <tr>
                                <th scope="row">Email</th>
                                <td style="padding-left:20px;color: #212529;;">
                                        @Model.nguoiDung.Email
                                    <br>
                                    <span>
                                        Đây là địa chỉ email bạn dùng để đăng nhập. Chúng tôi sẽ gửi các xác nhận
                                        tới địa chỉ này.
                                    </span>
                                </td>
                            </tr>
                            <tr>
                        <th scope="row">Tên</th>
                                @if (TempData["error"] != null)
                                {
                            <div style="color: red;">@TempData["error"]</div>
                                }
                        
                            <td>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Trống" aria-label="Username" aria-describedby="basic-addon1" style="border: none;" value="@Model.nguoiDung.Ten" name="Ten">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">SĐT</th>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Trống" aria-label="Username" aria-describedby="basic-addon1" style="border: none;" value="@Model.nguoiDung.SoDienThoai" name="SoDienThoai">
                                </div>
                            </td>
                        </tr>

                        <tr>
                            <th scope="row">Giới tính</th>
                            <td>
                                <div class="input-group mb-3">
                                    <input type="text" class="form-control" placeholder="Trống" aria-label="Username" aria-describedby="basic-addon1" style="border: none;" value="@Model.nguoiDung.GioiTinh" name="GioiTinh">
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <th scope="row">Ngày Sinh</th>
                            <td>
                                <div class="input-group mb-3">
                                             
                                            <input type="text" class="form-control" placeholder="Trống" aria-label="Username" aria-describedby="basic-addon1" style="border: none;" value="@Model.nguoiDung.NgaySinh" name="NgaySinh">
                                            
                                </div>
                            </td>
                        </tr>

                        </tbody>
                    </table>
                    <div class="row">
                        <button class=" bk-btn" type="submit">Lưu chỉnh sửa</button>
                    </div>
                    <div class="modal" id="myModal-capnhat" tabindex="-1">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">Cập nhật thông tin thành công</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                </div>
                               
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>
</div>
<style>
    .bk-btn {
        display: inline-block;
        font-size: 13px;
        font-weight: 700;
        padding: 16px 28px 15px;
        margin-right: 30px;
        background: #dfa974;
        color: #ffffff;
        white-space: nowrap;
        text-transform: uppercase;
        text-decoration: none;
        letter-spacing: 2px;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function () {
        if (@Model.TrangThaiCapNhat === 1) {
            $('#myModal-capnhat').modal('show');
        }
    });
</script>