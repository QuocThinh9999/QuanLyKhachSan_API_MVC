@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ClientQuanLyKhachSan.Models.ModelViewUser
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>

<link rel="stylesheet" href="~/front-end/css/login.css">

<div class="login" style="background-image: url(/images/login.jpg)">
    <div class="container">
        <div class="row">
            <div class="login-form col-lg-4 offset-lg-4">
                <h2>Khởi tạo lại mật khẩu</h2>
                @if (TempData["error"] != null)
                {
                    <div style="color: red;">@TempData["error"]</div>
                }
                <form asp-area="Admin" asp-controller="TaiKhoan" asp-action="DoiLaiMatKhau2" method="post">
                    <div class="password-group group" style="margin-bottom: 30px;">
                        <label for="password-input">Mật khẩu mới:</label>
                        <input type="text" name="IdNguoiDung" value="@Model.doiLaiMatKhau.IdNguoiDung" aria-describedby="text" hidden>
                        <input type="password" class="form-control" id='password-input' placeholder="Mật khẩu mới" name="Password" value="@Model.doiLaiMatKhau.Password">
                        <i class="fa-solid fa-lock"></i>
                    </div>
                    <div class="password-group group" style="margin-bottom: 30px;">
                        <label for="password-input">Xác nhận mật khẩu:</label>
                        <input type="password" class="form-control" id='password-input' placeholder="Xác nhận mật khẩu" name="Password2" value="@Model.doiLaiMatKhau.Password2">
                        <i class="fa-solid fa-lock"></i>
                    </div>
                    <button type="submit" class="btn">Xác nhận</button>
                </form>
            </div>
        </div>
    </div>

</div>>